<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FrontDesk">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="52dp"
        android:text="Welcome, "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="181dp"
        android:layout_height="54dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="115dp"
        android:text="Log out"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="#D7F8C839"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageRoomBtn" />

    <ImageButton
        android:id="@+id/checkInBtn"
        android:layout_width="120dp"
        android:layout_height="123dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/pad"
        app:layout_constraintEnd_toStartOf="@+id/checkOutBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/capture"
        tools:ignore="MissingConstraints"></ImageButton>

    <ImageButton
        android:id="@+id/checkOutBtn"
        android:layout_width="134dp"
        android:layout_height="123dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:translationX="15dp"
        android:translationY="8dp"
        app:layout_constraintEnd_toStartOf="@+id/roomBtn"
        app:layout_constraintStart_toEndOf="@+id/checkInBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/capture2" />

    <ImageButton
        android:id="@+id/manageRoomBtn"
        android:layout_width="126dp"
        android:layout_height="127dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:scaleX="1.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roomBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/capture3" />

    <TextView
        android:id="@+id/loginName"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/roomBtn"
        android:layout_width="136dp"
        android:layout_height="128dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:translationY="10sp"
        app:layout_constraintEnd_toStartOf="@+id/manageRoomBtn"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toEndOf="@+id/checkOutBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/capture4" />

</androidx.constraintlayout.widget.ConstraintLayout>