<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HousekeepingMenu">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="28dp"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adminName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:width="150sp"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/tvWelcome"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgViewTaskAllocation"
        android:layout_width="157dp"
        android:layout_height="141dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/desc_button_task_allocation"
        app:layout_constraintStart_toEndOf="@+id/imgViewInspection"
        app:layout_constraintTop_toBottomOf="@+id/adminName"
        app:srcCompat="@drawable/btn_task" />

    <ImageView
        android:id="@+id/imgViewInspection"
        android:layout_width="158dp"
        android:layout_height="144dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/desc_button_inspection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        app:srcCompat="@drawable/btn_inspect" />

    <android.widget.Button
        android:id="@+id/btnLogout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="153dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/log_out"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#F2C94C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewInspection"
        app:strokeColor="#F2C94C" />


</androidx.constraintlayout.widget.ConstraintLayout>