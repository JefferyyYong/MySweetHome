<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustPayment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2C94C"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCustMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/black"
            android:layout_marginLeft="180dp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="18dp" />

        <ImageView
            android:id="@+id/custHomeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/homepage_icon"
            android:layout_marginLeft="100dp"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:text="Visa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="134dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:text="Master Card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3" />

    <TextView
        android:id="@+id/txtCardNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Card Number:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton4" />

    <EditText
        android:id="@+id/etCardNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="none"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/txtCardNo"
        app:layout_constraintTop_toBottomOf="@+id/radioButton4" />

    <TextView
        android:id="@+id/txtCardExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Expiry:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCardNo" />

    <EditText
        android:id="@+id/etCardExpiry"
        android:layout_width="143dp"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="none"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/txtCardExpiry"
        app:layout_constraintTop_toBottomOf="@+id/etCardNo" />

    <TextView
        android:id="@+id/txtCVC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="8dp"
        android:text="CVC:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/etCVC"
        app:layout_constraintTop_toBottomOf="@+id/etCardNo" />

    <EditText
        android:id="@+id/etCVC"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCardNo" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="75dp"
        android:text="Finish and Pay"
        app:backgroundTint="#3CB043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCardExpiry" />

    <Button
        android:id="@+id/btnCancelPay"
        android:layout_width="227dp"
        android:layout_height="51dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="30dp"
        android:text="Cancel"
        app:backgroundTint="#B90E0A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPay" />

    <ImageView
        android:id="@+id/card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="115dp"
        app:layout_constraintStart_toEndOf="@+id/radioButton4"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:srcCompat="@drawable/card_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>