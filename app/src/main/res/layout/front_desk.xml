<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FrontDesk">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="166dp"
        android:text="Welcome, "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="181dp"
        android:layout_height="54dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="84dp"
        android:text="Log out"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="#D7F8C839"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/checkInBtn"
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/pad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/capture"
        tools:ignore="MissingConstraints"></ImageButton>

    <ImageButton
        android:id="@+id/checkOutBtn"
        android:layout_width="134dp"
        android:layout_height="115dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:translationX="15dp"
        android:translationY="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkInBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/capture2" />

    <ImageButton
        android:id="@+id/manageRoomBtn"
        android:layout_width="126dp"
        android:layout_height="127dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:scaleX="1.1"
        app:layout_constraintEnd_toStartOf="@+id/roomStatusBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkInBtn"
        app:srcCompat="@drawable/capture3" />

    <ImageButton
        android:id="@+id/roomStatusBtn"
        android:layout_width="125dp"
        android:layout_height="133dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="62dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/manageRoomBtn"
        app:layout_constraintTop_toBottomOf="@+id/checkOutBtn"
        app:srcCompat="@drawable/capture4" />

    <TextView
        android:id="@+id/loginName"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>